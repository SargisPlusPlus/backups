{
    "eslint.codeActionsOnSave.rules": null,
    "vim.commandLineModeKeyBindings": [],
    "vim.commandLineModeKeyBindingsNonRecursive": [],
    "vim.leader": "<Space>",
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-p>": false,
        "<C-w>": false,
        "<C-n>": false,
    },
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.hlsearch": true,
    "vim.surround": true,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "a"
            ],
            "commands": [
                "workbench.view.explorer"
            ]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "k",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "eslint.rules.customizations": [],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "cloudcode.project": "ai-dev-preview-external",
    "cloudcode.beta.enableAICompanion": true,
    "cloudcode.beta.enableAICompanionChat": true,
    "cloudcode.duetAI.project": "ai-dev-preview-external",
    "cloudcode.duetAI.codeGeneration.enable": true,
    "cloudcode.updateChannel": "trusted-testers",
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "fluent-icons",

    // Controls the font family.
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Fira Code iScript', 'Fira Code', Consolas, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    //following will be in italic (=FlottFlott)
                    "comment",
                    // "entity.name.type.class", //class names
                    // "keyword", //import, export, returnâ€¦
                    // "storage.modifier", //static keyword
                    // "storage.type", //class keyword
                    // "support.class.builtin",
                    // "keyword.control",
                    // "constant.language",
                    // "entity.other.attribute-name",
                    // "string.quoted.single",
                    // "entity.name.method",
                    // "entity.name.tag"
                ],
                "settings": {
                    "fontStyle": "italic",
                }
            },
            {
                "scope": [
                    "variable.parameter",
                    "variable.other.property",
                ],
                "settings": {
                   "fontStyle": ""
                }

            }
        ]
    },
    "files.autoSave": "afterDelay",
	"terminal.integrated.scrollback": 10000000000,
}
